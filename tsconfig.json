{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "lib",
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "components": ["./components"],
      "components/*": ["./components/*"],
      "hooks": ["./hooks"],
      "hooks/*": ["./hooks/*"],
      "styles": ["./styles"],
      "styles/*": ["./styles/*"],
      "utils": ["./utils"],
      "utils/*": ["./utils/*"],
    },
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
  },
  "include": ["src"]
}
