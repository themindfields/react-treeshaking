{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@components": ["src/components"],
    },
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "plugins": [
      { "transform": "typescript-transform-paths"}, 
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
  },
  "include": [".", "src"]
}
