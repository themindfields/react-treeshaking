{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "lib",
    "baseUrl": "../",
    "allowJs": true,
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
    },
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
}
